<MudNavLink Href="@Href" Ripple="@Ripple" Disabled="@Disabled">
    <svg role="img" xmlns="http://www.w3.org/2000/svg" transform="@(TransformData)" width="@IconSize" height="@IconSize" viewBox="@ViewBox">
        @((MarkupString)Icon)
    </svg>
    @ChildContent
</MudNavLink>

@code
{

    [Parameter] public string Href { get; set; } = "";
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string? TransformData { get; set; } = "";
    [Parameter] public int? IconSize { get; set; } = 24;
    [Parameter] public string? ViewBox { get; set; } = "0 0 24 24";

    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool Ripple { get; set; } = true;

    [Parameter] public RenderFragment? ChildContent { get; set; }
}
