<MudDialog Options="_options">
    <DialogContent>
        @($"| {ContainerName} | {ContainerTag}")
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(MudDialog!.Cancel)">Cancel</MudButton>
        <MudButton OnClick="CreateContainer">Create Container</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private readonly DialogOptions _options = new()
    {
        BackdropClick = false,
        CloseOnEscapeKey = false,
        CloseButton = true
    };

    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    [Parameter] public string ContainerName { get; set; } = "";
    [Parameter] public string ContainerTag { get; set; } = "";

    private void CreateContainer()
    {
        throw new NotImplementedException();
    }

}