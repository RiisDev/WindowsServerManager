                                <MudTextField T="string" Label="Prowlarr Api Key" Variant="Variant.Outlined" />
                            </MudStack>
                        </MudItem>
                        <MudItem xs="4">
                            <MudStack>
                                <MudSwitch UncheckedColor="Color.Error"Color="Color.Primary" Label="qBitTorrent Enabled" T="bool"></MudSwitch>
                                <MudTextField T="string" Label="qBitTorret Url" Variant="Variant.Outlined" />
                                <MudTextField T="string" Label="qBitTorrent Username" Variant="Variant.Outlined" />
                                <MudTextField T="string" Label="qBitTorrent Password" Variant="Variant.Outlined" />
                            </MudStack>
                        </MudItem>
                        <MudItem xs="4">
                            <MudStack>
                                <MudSwitch UncheckedColor="Color.Error"Color="Color.Primary" Label="Bazaar Enabled" T="bool"></MudSwitch>
                                <MudTextField T="string" Label="Bazaar Url" Variant="Variant.Outlined" />
                                <MudTextField T="string" Label="Bazaar Api Key" Variant="Variant.Outlined" />
                            </MudStack>
                        </MudItem>
                        <MudItem xs="4">
                            <MudStack>
                                <MudSwitch UncheckedColor="Color.Error"Color="Color.Primary" Label="Whisparr Enabled" T="bool"></MudSwitch>
                                <MudTextField T="string" Label="Whisparr Url" Variant="Variant.Outlined" />
                                <MudTextField T="string" Label="Whisparr Api Key" Variant="Variant.Outlined" />
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </ChildContent>
        </MudExpansionPanel>
    </MudExpansionPanels>
</DashLayout>

